{% extends 'base.html.twig' %}

{% block title %}Crear Pregunta{% endblock %}

{% block body %}
    <style>
        /* Estilos para la página */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        header {
            background-color: #4CAF50;
            color: white;
            padding: 10px;
            text-align: center;
        }

        nav {
            text-align: right;
            margin: 10px;
        }

        nav a {
            margin: 0 15px;
            color: white;
            text-decoration: none;
        }

        .main-content {
            padding: 20px;
        }

        .content-wrapper {
            border: 1px solid #ccc;
            padding: 20px;
            margin-top: 20px;
        }
    </style>
    <header>
        <h1>FranQuiz</h1>
    </header>

    <nav>
        <a href="{{ path('app_logout') }}">logout</a>
    </nav>
    <div class="create-pregunta-container">
        <h2>Crear una nueva pregunta</h2>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.descripcion) }}
                {{ form_widget(form.descripcion, {'attr': {'class': 'form-control', 'placeholder': 'Descripción de la pregunta'}}) }}
                {{ form_errors(form.descripcion) }}
            </div>

            <div class="form-group">
                {{ form_label(form.opcion1) }}
                {{ form_widget(form.opcion1, {'attr': {'class': 'form-control', 'placeholder': 'Opción 1'}}) }}
                {{ form_errors(form.opcion1) }}
            </div>

            <div class="form-group">
                {{ form_label(form.opcion2) }}
                {{ form_widget(form.opcion2, {'attr': {'class': 'form-control', 'placeholder': 'Opción 2'}}) }}
                {{ form_errors(form.opcion2) }}
            </div>

            <div class="form-group">
                {{ form_label(form.opcion3) }}
                {{ form_widget(form.opcion3, {'attr': {'class': 'form-control', 'placeholder': 'Opción 3 (opcional)'}}) }}
                {{ form_errors(form.opcion3) }}
            </div>

            <div class="form-group">
                {{ form_label(form.opcion4) }}
                {{ form_widget(form.opcion4, {'attr': {'class': 'form-control', 'placeholder': 'Opción 4 (opcional)'}}) }}
                {{ form_errors(form.opcion4) }}
            </div>

            <div class="form-group">
                {{ form_label(form.correcta) }}
                {{ form_widget(form.correcta, {'attr': {'class': 'form-control', 'placeholder': 'Opción correcta'}}) }}
                {{ form_errors(form.correcta) }}
            </div>

            <div class="form-group">
                {{ form_label(form.fechaInicio) }}
                {{ form_widget(form.fechaInicio, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                {{ form_errors(form.fechaInicio) }}
            </div>

            <div class="form-group">
                {{ form_label(form.fechaFin) }}
                {{ form_widget(form.fechaFin, {'attr': {'class': 'form-control', 'type': 'datetime-local'}}) }}
                {{ form_errors(form.fechaFin) }}
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Crear Pregunta</button>
            </div>
        {{ form_end(form) }}

        {# Botón para volver a la lista de preguntas #}
        <form action="{{ path('pregunta_index') }}" method="get" style="display:inline;">
            <button type="submit" class="btn btn-secondary">Volver a la lista de preguntas</button>
        </form>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/pregunta.css') }}">
{% endblock %}
